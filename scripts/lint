#!/bin/bash

source ./scripts/black
source ./scripts/isort
source ./scripts/ruff
source ./scripts/pyright

run_lint() {
  echo "ðŸ§¹ Code lint using multiple tools:"

  local fix="$1"
  if [[ "$fix" == "-f" || "$fix" == "--fix" ]]; then
    run_black .
    run_isort .
    run_ruff --fix .
  else
    run_black --check .
    run_isort --check .
    run_ruff .
  fi
  run_pyright
}

if [[ "${#BASH_SOURCE[@]}" -eq 1 ]]; then
  run_lint "$@"
fi
